#import <Foundation/Foundation.h>

/**
 *  @brief 文件相关操作类
 */
@interface PCDFile : NSObject

/**
 *  @brief 应用包根目录
 *
 *  @return 应用包根目录
 */
+(NSString *)resourcePath;

/**
 *  @brief 应用包下文件绝对路径
 *
 *  @param subPath 相对路径
 *
 *  @return 绝对路径
 */
+(NSString *)resourceWithPath:(NSString *)subPath;

/**
 *  @brief 应用沙盒根目录
 *
 *  @return 应用沙盒根目录
 */
+(NSString *)sandboxPath;

/**
 *  @brief 应用沙盒下document文件夹路径
 *
 *  @return document绝对路径
 */
+(NSString *)sandboxDocumentPath;

/**
 *  @brief 应用沙盒document下文件路径
 *
 *  @param subPath 相对路径
 *
 *  @return 绝对路径
 */
+(NSString *)documentWithPath:(NSString *)subPath;

/**
 *  @brief 应用沙盒下cache路径
 *
 *  @return cache路径
 */
+(NSString *)sandboxCachePath;

/**
 *  @brief 应用沙盒cache下文件路径
 *
 *  @param subPath 相对路径
 *
 *  @return 绝对路径
 */
+(NSString *)cacheWithPath:(NSString *)subPath;

/**
 *  @brief 应用沙盒下tmp文件夹路径
 *
 *  @return tmp文件夹路径
 */
+(NSString *)sandboxTempPath;

/**
 *  @brief 应用沙盒tmp下文件路径
 *
 *  @param subPath 相对路径
 *
 *  @return 绝对路径
 */
+(NSString *)tempWithPath:(NSString *)subPath;

/**
 *  @brief 文件是否存在
 *
 *  @param path 绝对路径
 *
 *  @return 是否存在
 */
+(BOOL)fileExistsAtPath:(NSString *)path;

/**
 *  @brief 创建文件夹
 *
 *  @param path 路径
 *
 *  @return 是否创建成功
 */
+(BOOL)createDirectoryAtPath:(NSString *)path;

/**
 *  @brief 删除文件
 *
 *  @param path 绝对路径
 *
 *  @return 是否删除成功
 */
+(BOOL)removeItemAtPath:(NSString *)path;

/**
 *  @brief 文件夹下所有文件路径
 *
 *  @param path 文件夹路径
 *
 *  @return 文件路径
 */
+(NSArray *)contentsOfDirectoryAtPath:(NSString *)path;

/**
 *  @brief 文件/文件夹拷贝
 *
 *  @param srcPath 源文件路径
 *  @param dstPath 目标文件路径
 *
 *  @return 是否拷贝完成
 */
+(BOOL)copyItemAtPath:(NSString *)srcPath toPath:(NSString *)dstPath;

@end
