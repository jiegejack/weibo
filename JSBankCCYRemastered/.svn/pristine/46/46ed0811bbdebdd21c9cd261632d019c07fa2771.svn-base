#import <Foundation/Foundation.h>
#import <CommonCrypto/CommonCrypto.h>

#import "PCDWebCacheConfing.h"


@interface PCDWebCacheEncryption : NSObject


/*
 *@brief 字符串转MD5
 *
 *@param string 字符串
 *
 */
+(NSString *)md5String:(NSString *)string;


/*
 *@brief data数据转MD5
 *
 *@param data  data数据
 *
 */
+(NSString *)md5StringWithData:(NSData *)data;

/*
 *@brief data数据转MD5
 *
 *@param data  data数据
 *
 */
+(NSString*)getMD5WithData:(NSData *)data;

/*
 *@brief 数据AES加密解密
 *
 *@param data  机密数据
 *
 *@param encryptOrDecrypt 操作类型 kCCDecrypt解密 kCCEncrypt加密
 *
 */
+(NSData *)tripleAES:(NSData*)plainData encryptOrDecrypt:(CCOperation)encryptOrDecrypt;

/*
 *@brief 资源文件AES加密解密
 *
 *@param data  机密数据
 *
 *@param encryptOrDecrypt 操作类型 kCCDecrypt解密 kCCEncrypt加密
 *
 */
+(NSData *)tripleAESForZip:(NSData*)plainData encryptOrDecrypt:(CCOperation)encryptOrDecrypt;

/*
 *@brief 压缩文件解密
 *
 *@param filePath  文件路径
 *
 */
+(NSString *) DecryptFile:(NSString*)filePath;

/**
 * 写文件
 *
 * @param strInfo 文件内容
 * @param fileName 文件名
 * @return 结果
 */
+(BOOL) writeStrToFile:(NSString *)strInfo  FileName:(NSString *)fileName;

/**
 * @brief 写文件
 *
 * @param dataInfo 文件内容
 * @param fileName 文件名
 * @return 结果
 */
+(BOOL) writeDataToFile:(NSData *)dataInfo  FileName:(NSString *)fileName;

/**
 * @brief 获取文件内容
 *
 * @param fileName 文件名
 * @return 文件
 */
+(NSString *) getStrForFile:(NSString *)fileName;

/**
 * @brief 获取文件内容
 *
 * @param fileName 文件名
 * @return 文件
 */
+(NSData *) getDateForFile:(NSString *)fileName;

/**
 * @brief 删除文件
 *
 * @param fileName 文件名
 * @return 结果
 */
+(BOOL) delFile:(NSString *)fileName;

@end
