#import <Foundation/Foundation.h>


@interface PCDNetWorkEncrypt : NSObject

/*!
 *  @brief  加密模式，默认三段式
 */
@property (nonatomic,assign) PCDRequestEncryptType encrypt;

/**
 *  @brief 解密模式，默认AES解密
 */
@property (nonatomic,assign) PCDRequestDecryptType decrypt;


/**
 *  @brief 单例
 */
+ (instancetype)sharedWorkEncrypt;

/**
 * @brief  对数据进行加密
 *
 */
-(NSString *)getCryptString:(NSString *)aString withKey:(NSString **)aKey;


/**
 * @brief  对数据进行解密
 *
 */
- (NSString *)responseString:(NSData *)responseData withRandomKey:(NSString *)randomKey;

@end
