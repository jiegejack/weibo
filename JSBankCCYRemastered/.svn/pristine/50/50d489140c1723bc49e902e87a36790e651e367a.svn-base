#import <Foundation/Foundation.h>


/**
 安全存储类
 */
@interface PCDDataStorageManger : NSObject

@property(nonatomic,retain)  NSString * _Nullable AesVector;

/**
 *  @brief  Aes加密key   nil 表示不加密
 */
@property(nonatomic,retain) NSString  * _Nonnull Aeskey;

/**
 *  @brief  将字符串加密存在在NSUserDefaults
 *
 *  @param string 字符串
 *
 *  @param key    存储键值
 */
-(void)setCacheUDString:(nullable NSString *)string forKey:(nonnull NSString *)key;

/**
 *  @brief  根据键值从NSUserDefaults取数据
 *
 *  @param key 存储键值
 *
 *  @return 数据
 */
-(nullable NSString *)cacheUDStringForKey:(nonnull NSString *)key;

/**
 *  @brief  将数据保存到本地文件
 *
 *  @param fileData 文件流
 *
 *  @param fileName 文件名
 *
 *  @return  YES 保存成功  NO 保存失败
 */
-(BOOL )setCacheForFile:(nullable NSData *)fileData FileName:(nonnull NSString *)fileName;

/**
 *  @brief  读取保存在文件里的数据
 *
 *  @param fileName 文件名
 *
 *  @return 数据
 */
-(nullable NSData *)cacheForFileWithFileName:(nonnull NSString *)fileName;

#ifdef __cplusplus
extern "C" {
#endif
    PCDDataStorageManger * PCDDataStorageMangerGet();
#ifdef __cplusplus
}
#endif
@end
