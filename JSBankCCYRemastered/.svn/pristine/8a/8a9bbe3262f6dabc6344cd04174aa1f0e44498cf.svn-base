#import <UIKit/UIKit.h>

typedef NS_ENUM(NSInteger, CodeState) { //验证码状态
    CodeStateInvalid = 0,//验证码无效
    CodeStateValid,      //验证码有效
    CodeStateNotSend     //未发送验证码
};

@interface JSCountDownView : UIButton
@property (nonatomic, assign) NSInteger time;
@property (nonatomic, strong) UIColor  *color;
@property (nonatomic, copy)   NSString *tagString;
@property (nonatomic, copy)   NSString *tipString;
@property (nonatomic, assign) CodeState codeState;

/**
 * 控制器销毁时，关闭定时
 */
+ (void)invalidTimer;

@end


