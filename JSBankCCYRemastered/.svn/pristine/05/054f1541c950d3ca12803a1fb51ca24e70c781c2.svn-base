#import <UIKit/UIKit.h>

NS_ASSUME_NONNULL_BEGIN

typedef void(^CustomAction)(void);

@interface UIAlertController (AlertController)
@property (nonatomic, copy) CustomAction action;
@property (nonatomic, strong) UIImage *okButtonImage;
@property (nonatomic, strong) UIImage *cancelButtonImage;

@property (nonatomic, copy) NSString *cancelButtonTitle;
@property (nonatomic, copy) NSString *otherButtonTitle;

@property (nonatomic, strong) UIColor *cancelButtonColor;
@property (nonatomic, strong) UIColor *otherButtonColor;

@property (nonatomic, strong) UIFont *cancelButtonFont;
@property (nonatomic, strong) UIFont *otherButtonFont;

- (void)ccy_dismiss;

@end

NS_ASSUME_NONNULL_END
