#import <Foundation/Foundation.h>

//MARK: - lable主题模型
@interface PCDLabelTheme : NSObject

/**
 字体颜色 格式 r,g,b,alpha
 */
@property (nonatomic,copy) NSString *textColor;
@property (nonatomic,copy) NSString *tag;


@end


//MARK: - button主题模型
@interface PCDButtomTheme : NSObject

/**
 字体颜色 格式 r,g,b,alpha
 */
@property (nonatomic,copy) NSString *textColor;
@property (nonatomic,copy) NSString *tag;


@end

//MARK: - barItem配置模型
@interface PCDBarItemTheme : NSObject

@property (nonatomic,copy) NSString *image;
@property (nonatomic,copy) NSString *titleColorHl;
@property (nonatomic,copy) NSString *titleColor;
@property (nonatomic,copy) NSString *imageHL;
@property (nonatomic,copy) NSString *title;

@end


//MARK: - 导航条主题模型
@interface PCDNavBarTheme : NSObject

@property (nonatomic,strong) PCDBarItemTheme *rightBarButtonItemTheme;
@property (nonatomic,strong) PCDBarItemTheme *leftBarButtomItem;
@property (nonatomic,strong) PCDBarItemTheme *titleItem;
@property (nonatomic,copy) NSString *backgroundImg;
@property (nonatomic,copy) NSString *backgroundColor;

@end


//MARK: - tabbar主题模型
@interface PCDTabBarTheme : NSObject

@property (nonatomic,copy) NSString *backgroundImg;
@property (nonatomic,strong) NSArray <PCDBarItemTheme *> *tabBarItems;

@end



//MARK: - 主题模型
@interface PCDThemeModle : NSObject

@property (nonatomic,strong) PCDLabelTheme  *labelTheme;
@property (nonatomic,strong) PCDButtomTheme *buttonTheme;
@property (nonatomic,strong) PCDNavBarTheme *navBarTheme;
@property (nonatomic,strong) PCDTabBarTheme *tabBarTheme;
@property (nonatomic,copy) NSString *statusBarColor;


@end
