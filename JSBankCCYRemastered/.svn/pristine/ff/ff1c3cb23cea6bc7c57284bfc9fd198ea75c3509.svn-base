typedef NS_ENUM(NSInteger, YTKeyboardType) {
    YTKeyboardTypeNone = 0,
    YTKeyboardTypeLetter = 1,//全字母键盘
    YTKeyboardTypeNumber = 2,//纯数字键盘,可以切换
    YTKeyboardTypeNumberSupplement = 3,//纯数字键盘,可以切换,带全部字母
    YTKeyboardTypeSpecial = 4,//全符号键盘
    YTKeyboardTypeLetterWithNumber = 5,//顶部一行数字，下面全字母
    YTKeyboardTypeIDCard = 6,//身份证键盘
    YTKeyboardTypeMoney = 7,//金额键盘
    YTKeyboardTypeOnlyNumber//纯数字键盘，不能切换
};

typedef enum YTKeyType{
    YTKeyTypeLetter,//字母0
    YTKeyTypeNumber,//数字1
    YTKeyTypeSpecial,//特殊字符2
    YTKeyTypeSpace,//space空格3
    YTKeyTypeDelete,//删除4
    YTKeyTypeChange,//键盘切换（例如：字母、数字切换）5
    YTKeyTypeUpper,//大小写字母切换6
    YTKeyTypeHidden,//隐藏键盘7
    YTKeyTypeReturn,//return 8
    YTKeyTypeUndo,//撤销9
    YTKeyTypeSupplement,//数字，带字母10
    YTKeyTypeDefault//按键点击不做处理
} YTKeyType;

