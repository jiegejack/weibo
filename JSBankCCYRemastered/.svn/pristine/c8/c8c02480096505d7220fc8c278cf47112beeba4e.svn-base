    [self checkScreen];

    return YES;
}

- (void)checkScreen {
    //截屏
    [[NSNotificationCenter defaultCenter]addObserver:self selector:@selector(recordScreen) name:UIApplicationUserDidTakeScreenshotNotification  object:nil];
    //录屏
    UIScreen * sc = [UIScreen mainScreen];
    if (@available(iOS 11.0, *)) {
        if (sc.isCaptured) {
            self.isRecordScreen = YES;
            [JSDeftAlert showMessage:@"录屏/投屏中，请注意保护您的个人信息！" afterDelay:1.6 completeHandle:nil];
        }
    }
    if (@available(iOS 11.0, *)) {
        [[NSNotificationCenter defaultCenter]addObserver:self selector:@selector(recordScreen) name:UIScreenCapturedDidChangeNotification  object:nil];
    }
}

- (void)recordScreen {
    self.isRecordScreen = !self.isRecordScreen;

    NSString *msg = @"录屏/投屏中，请注意保护您的个人信息！";
    if (self.isRecordScreen) {
        [JSDeftAlert showMessage:msg afterDelay:1.6 completeHandle:nil];
    }
}

