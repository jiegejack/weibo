#import <Foundation/Foundation.h>
#import <UIKit/UIKit.h>

@interface PCDCodeConfig : NSObject

//内容信息
@property(nonatomic,copy) NSString *stringValue;

//背景颜色，默认白色
@property(nonatomic,strong) UIColor *backgroundColor;

//前景颜色，默认黑色
@property(nonatomic,assign) UIColor *foregroundColor;

//图片尺寸，默认800*800
@property(nonatomic,assign) CGSize imageSize;

//logo
@property(nonatomic,strong) UIImage *logoImage;

//logo尺寸，默认150*150
@property(nonatomic,assign) CGSize logoImageSize;

@end

/**
 二维码、条形码工具
 */
@interface PCDCodeUtil : NSObject

/**
 识别图片二维码

 @param image 图片
 @return 结果
 */
+(NSArray *)stringValueForQRCodeImage:(UIImage *)image;

/**
 图片合成
 
 @param superImage 父级图片
 @param superSize 父级图片大小，zero则取图片尺寸
 @param subImage 子级图片
 @param subSize 子级图片大小，zero则取图片尺寸
 @return 新的图片
 */
+(UIImage *)synthetic:(UIImage *)superImage superSize:(CGSize)superSize subImage:(UIImage *)subImage subSize:(CGSize)subSize;

/**
 生成二维码

 @param config 配置
 @return 二维码图片
 */
+(UIImage *)generateQRCode:(PCDCodeConfig *)config;

/**
 生成条形码(Code128类型)

 @param stringValue 内容
 @param imageSize 图片尺寸
 @return 条形码图片
 */
+(UIImage *)generateBarCode:(NSString *)stringValue imageSize:(CGSize)imageSize;

@end
