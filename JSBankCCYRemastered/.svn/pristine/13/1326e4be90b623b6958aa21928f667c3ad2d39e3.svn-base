#import <Foundation/Foundation.h>

/**
 *  钥匙串相关操作
 */
@interface PCDKeychain : NSObject
/**
 *  保存到钥匙串
 *
 *  @param secret 保存内容
 *  @param key    key值
 *
 *  @return 是否保存成功
 */
+(BOOL)saveSecret:(NSString *)secret forKey:(NSString *)key;
/**
 *  获取钥匙串中存的内容
 *
 *  @param key   key值
 *
 *  @return 钥匙串中存的内容
 */
+(NSString *)secretForKey:(NSString *)key;
/**
 *  删除钥匙串指定内容
 *
 *  @param key key值
 *
 *  @return 是否删除成功
 */
+(BOOL)removeSecretForKey:(NSString *)key;
/**
 *  删除钥匙串所有内容
 *
 *  @return 是否删除成功
 */
+(BOOL)removeAllSecrets;

@end
