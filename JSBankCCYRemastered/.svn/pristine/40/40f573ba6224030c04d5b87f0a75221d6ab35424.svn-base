#import <Foundation/Foundation.h>

/**
 *  @brief NSString扩展
 */
@interface NSString (Additions)

/**
 *  @brief 是否包含字符串
 *
 *  @param string 待验证字符串
 *
 *  @return 是否包含
 */
-(BOOL)includeString:(NSString *)string;

/**
 *  隐藏中间字符
 *
 *  @return 返回部分隐藏的字符串 如11位：18130014020  返回  181****4020
 *  其它长度的字符串   首位明文其它部分全部隐藏  如:1234 返回1**4
 */
-(NSString *)middleHiddenString;

/**
 *  字符串的md5序列化
 *
 *  @return 字符串的md5序列化值（大写）
 */
-(NSString *)md5UpString;

/**
 *  字符串的md5序列化
 *
 *  @return 字符串的md5序列化值（小写）
 */
-(NSString *)md5LowString;

/**
 *  字符串base64序列化
 *
 *  @return base64序列化字符串
 */
-(NSString *)base64String;

/**
 *  base64序列化字符串解码
 *
 *  @return 解码base64 字符串
 */
-(NSString *)base64DecodeString;

/**
 *  @brief sha1序列化
 *
 *  @return sha1字符串
 */
-(NSString *)sha1String;

/**
 *  @brief sha256序列化
 *
 *  @return sha256字符串
 */
- (NSString *)sha256String;

/**
 *	@brief	url编码
 *
 *	@return	返回url编码字符串.
 */
- (NSString *)urlEncode;

/**
 *	@brief	url解码
 *
 *	@return	返回url解码字符串.
 */
- (NSString *)urlDecode;

/**
 *  @brief  字符串转拼音
 *
 *  @param yesOrNo 是否是中文名，是的话将处理姓氏多音字
 *
 *  @return 结果
 */
-(NSString *)pinyinIsChineseName:(BOOL)yesOrNo;

/**
 *  @brief 16进制数转10进制  eg: 10 转成 16
 *
 *  @return 10进制数
 */
-(NSInteger)hexValue;

/**
 *  @brief 字符串转成16进值数组
 *
 *  @param array 16进值数组
 */
-(void)convertToHexArray:(uint8_t *)array;

/**
 *  @brief buffer转16进值字符串
 *
 *  @param buffer buffer字符数组
 *  @param length buffer长度
 *
 *  @return 16进制字符串
 */
+ (NSString*)bytesToHexString:(const uint8_t *)buffer length:(NSUInteger)length;

/**
 *  @brief buffer转字符串
 *
 *  @param buffer buffer字符数组
 *  @param length buffer长度
 *
 *  @return buffer字符串
 */
+ (NSString*)bytesFromHexString:(const uint8_t *)buffer length:(NSUInteger)length;

/**
 *  空字符串
 *
 *  @return @""
 */
+(NSString *)emptyString;

/**
 *  随机字符串
 *
 *  @return 返回8位长度的随机字符串
 */
+(NSString *)random8String;

/**
 *  随机字符串
 *
 *  @return 返回16位长度的随机字符串
 */
+(NSString *)random16String;

@end
