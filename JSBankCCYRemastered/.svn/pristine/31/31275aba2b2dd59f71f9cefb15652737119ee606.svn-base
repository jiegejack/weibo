#import <Foundation/Foundation.h>
#import <PCDNetworkService/PCDNetWorkItem.h>

@interface PCDNetWorkService : NSObject


/**
 *  @brief 获取service
 *
 *  @date 2018/1/22
 *
 *  @return 返回service
 */
+ (instancetype)sharedService;

/**
 *  @brief 设置最大队列数
 *
 *  @param maxCont 最大队列数
 *
 *  @date 2018/1/22
 *
 */
- (void)setMaxThread:(NSInteger)maxCont;


/**
 *  @brief 添加请求队列
 *
 *  @date 2018/1/22
 *
 */
-(void) addNetWork:(PCDNetWorkItem *)item;

/**
 *  @brief 移除网络请求
 *
 *  @date 2018/1/22
 *
 */
-(void) removeNetWork:(PCDNetWorkItem *)item;

/**
 *  @brief 发送同步请求
 *
 *  @date 2018/1/22
 *
 */
-(PCDNetWorkItem *) addSynchronizeNetWork:(PCDNetWorkItem *)item;


/**
 *  @brief 启动网络服务
 *
 *  @date 2018/1/22
 *
 */
-(void) start;



@end


#ifdef __cplusplus
extern "C" {
#endif
    PCDNetWorkService * PCDNetWorkServiceGet();
#ifdef __cplusplus
}
#endif
