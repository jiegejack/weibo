#import <UIKit/UIKit.h>

/**
 日期控件样式

 - PCDatePickerYM: 年月/年
 - PCDatePickerYMD: 年月日
 - PCDatePickerHM: 时分
 */
typedef NS_ENUM(NSUInteger, PCDatePickerStyle) {
    PCDatePickerYM,
    PCDatePickerYMD,
    PCDatePickerHM,
};

@class PCDActionSheet;
@class PCDatePickerDO;
@protocol PCDatePickerDelegate;
/**
 *  @brief 自定制日期选择器
 */
@interface PCDatePicker : UIView

/**
 *  @brief 实例化
 *
 *  @param dateStyle 日期样式
 *  @param pickerDO  日期数据项
 *
 *  @return PCDatePicker
 */
-(nonnull id)initWithStyle:(PCDatePickerStyle)dateStyle pickerData:(nonnull PCDatePickerDO *)pickerDO;

/**
 *  @brief 代理
 */
@property(nullable,nonatomic,assign) id<PCDatePickerDelegate> delegate;

/**
 *  @brief 日期选择器的样式
 */
@property(nonatomic,assign) PCDatePickerStyle dateStyle;

/**
 日期选择器的父视图
 */
@property(nonnull,nonatomic,strong) PCDActionSheet *sheet;

/**
 *  @brief 数据项
 */
@property(nullable,nonatomic,strong) PCDatePickerDO *pickerDO;

/**
 隐藏
 */
-(void)dismissPicker;

/**
 *  @brief 显示
 */
-(void)show;

/**
 *  @brief 日期格式化
 *
 *  @param date         日期
 *  @param formatString 格式
 *
 *  @return 日期字符串
 */
+(nullable NSString*)dateString:(nonnull NSDate *)date withFormatString:(nonnull NSString *)formatString;

/**
 *  @brief 日期格式化
 *
 *  @param dateString   日期字符串
 *  @param formatString 格式
 *
 *  @return 日期
 */
+(nullable NSDate*)dateByString:(nullable NSString*)dateString withFormatString:(nullable NSString *)formatString;

@end

@protocol PCDatePickerDelegate <NSObject>

@optional
/**
 *  @brief 选中日期代理
 *
 *  @param customPicker     PCDatePicker
 *  @param resultDateString 返回日期字符串
 */
-(void)datePicker:(nonnull PCDatePicker *)customPicker result:(nullable NSString *)resultDateString;
/**
 *  @brief 取消选择代理
 *
 *  @param customPicker PCDatePicker
 */
-(void)datePickerDidCancel:(nonnull PCDatePicker *)customPicker;

@end
