#import "UILabel+Extension.h"

@implementation UILabel (Extension)
//改变行间距
-(void)changeLineSpaceWithSpace:(CGFloat)space font:(UIFont *)font foreColor:(UIColor *)color
{
    NSString *text=self.text;
    NSMutableAttributedString *attributeString=[[NSMutableAttributedString alloc]initWithString:text];
    NSMutableParagraphStyle *paragraphStyle=[[NSMutableParagraphStyle alloc]init];
    NSDictionary *attributes=@{NSFontAttributeName:font,NSForegroundColorAttributeName:color,NSParagraphStyleAttributeName:paragraphStyle};
    paragraphStyle.lineSpacing=space;
    [attributeString addAttributes:attributes range:NSMakeRange(0, text.length)];
    self.attributedText = attributeString;
    [self sizeToFit];
}

//改变字间距
-(void)changeWordSpaceWithSpace:(CGFloat)space font:(UIFont *)font foreColor:(UIColor *)color

{
    NSString *text=self.text;
    NSMutableAttributedString *attributedString=[[NSMutableAttributedString alloc]initWithString:text attributes:@{NSKernAttributeName:@(space)}];
    NSMutableParagraphStyle *paragraphStyle=[[NSMutableParagraphStyle alloc]init];
    NSDictionary *attributes=@{NSFontAttributeName:font,NSForegroundColorAttributeName:color,NSParagraphStyleAttributeName:paragraphStyle};
    [attributedString addAttributes:attributes range:NSMakeRange(0, text.length)];
    self.attributedText=attributedString;
    [self sizeToFit];
}

//改变行间距和字间距
-(void)changeLineSpace:(CGFloat)lineSpace wordSpace:(CGFloat)wordSpace
{
    NSString *text = self.text;
    NSMutableAttributedString *attributedString = [[NSMutableAttributedString alloc] initWithString:text attributes:@{NSKernAttributeName:@(wordSpace)}];
    NSMutableParagraphStyle *paragraphStyle = [[NSMutableParagraphStyle alloc] init];
    [paragraphStyle setLineSpacing:lineSpace];
    [attributedString addAttribute:NSParagraphStyleAttributeName value:paragraphStyle range:NSMakeRange(0, text.length)];
    self.attributedText = attributedString;
    [self sizeToFit];
    
}

@end
