#import <Foundation/Foundation.h>

/**
 *  @brief NSObject扩展
 */
@interface NSObject (Additions)

/**
 *  @brief 字典转字符串
 *
 *  @return 字符串
 */
- (NSString *)JSONRepresentation;

/**
 *  @brief 字符串转json
 *
 *  @return json串
 */
- (id)JSONValue;

/**
 *  @brief object 相应block事件
 *
 *  @param performBlock block事件
 */
-(void)perform:(void (^)(void))performBlock;

/**
 *  @brief object 延时相应block事件
 *
 *  @param performBlock block事件
 *  @param delay 延时执行
 */
-(void)perform:(void (^)(void))performBlock andDelay:(NSTimeInterval)delay;

/**
 *  @brief 日志输出
 *
 *  @param format 日志输出格式及内容
 */
FOUNDATION_EXPORT void PCLog(NSString *format, ...);

/**
 使用日志重定向，则Xcode控制台不输出NSLog日志
 NSlog内容将保存到沙盒下Document/PC-Console.log文件
 info.plist添加UIFileSharingEnabled:YES，将Document设置成共享文件夹，以此来连接设备取出日志
 */
FOUNDATION_EXPORT void  LogRedirectToFile(void);

@end
