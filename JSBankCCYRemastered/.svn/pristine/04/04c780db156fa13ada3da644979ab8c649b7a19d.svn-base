#import <UIKit/UIKit.h>

@class PCDWaitView;

@interface UIView (WaitView)

/**
 显示等待层  导航条70不做覆盖，用户可点击导航按钮

 @param isShow 是否显示
 @param isfull 是否全屏覆盖 YES:全屏，导航条不可点击，NO:不全屏，导航条可操作
 */
-(void)showWait:(BOOL)isShow isFullScreen:(BOOL)isfull;

-(void)showWaitWithTitle:(NSString *)title isFullScreen:(BOOL)isfull;

//开始动画，针对app开启等待层后，进入home，会移除layer的动画
-(void)StartAnimation;

@end
