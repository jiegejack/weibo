#import "PCDScrollGridItemView.h"


@class PCDScrollGridItem;
/*!
 *  @brief  可编辑的itemview。继承于 PCDScrollGridItemView。初始化方法于PCDScrollGridItemView一致。添加了长按事件，抖动效果。
 */
@interface PCDScorllGridEditItemView : PCDScrollGridItemView{

    @private
    UILongPressGestureRecognizer *_longPressGestureRecognizer;
    BOOL _isEditing;
}

/**
 *  长按手势事件触发源
 */
@property(nonatomic, strong)UILongPressGestureRecognizer *longPressGestureRecognizer;

/**
 *  编辑按钮    （删除）
 */
@property(nonatomic, strong) UIButton *deleteBtn;

/**
 *  当前是否在编辑状态    只读属性
 */
@property(nonatomic, readonly) BOOL isEditing;

/**
 *  开始编辑
 */
-(void)startEditing;

/**
 *  结束编辑
 */
-(void)endEditing;

@end
