#import "CommonFont.h"

@implementation CommonFont

- (id)init {
    if (self = [super init]) {
        self.placeholdFont = [UIFont systemFontOfSize:15];
    }
    return self;
}

+ (instancetype)sharedFont {
    static CommonFont *commonFont = nil;
    
    static dispatch_once_t onceToken;
    dispatch_once(&onceToken, ^{
        commonFont = [[self alloc] init];
    });
    
    return commonFont;
}

#ifdef __cplusplus
extern "C" {
#endif
    CommonFont *Font() {
        
        return [CommonFont sharedFont];
    }
#ifdef __cplusplus
}
#endif

@end
