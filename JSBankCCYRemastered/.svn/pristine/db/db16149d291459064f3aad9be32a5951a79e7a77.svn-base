#import <Foundation/Foundation.h>
#import <UIKit/UIKit.h>

/**
 *  设备信息类
 */
@interface PCDevice : NSObject
/**
 *  获取设备名称
 *
 *  @return 设备名称
 */
+(NSString *)deviceName;
/**
 *  获取设备系统平台
 *
 *  @return 系统平台
 */
+(NSString *)systemPlatform;
/**
 *  获取设备系统版本
 *
 *  @return 系统版本
 */
+(NSString *)systemVersion;
/**
 *  获取设备型号
 *
 *  @return 设备型号
 */
+(NSString *)deviceModel;
/**
 *  获取设备唯一标识 ，默认可以不处理
 *  Project->Target->Capabilities中的Keychain Sharing：keychain Groups下的bundleId可实现多App的keychain数据共享
 *
 *  @return 设备唯一号
 */
+(NSString *)uniqueIdentifier;

/**
 *  获取设备mac地址
 *
 *  @return 设备mac地址
 */
+(NSString *)getMacAddress;

/**
 *  获取设备分辨率
 *
 *  @return 设备分辨率
 */
+(NSString *)getResolution;

/**
 *  是否越狱
 *
 *  @return 是否越狱
 */
+(BOOL)isJailbreak;
/**
 *  iOS7校验
 *
 *  @return 是否iOS7以后
 */
+(BOOL)iOS7Later;
/**
 *  iOS8校验
 *
 *  @return 是否iOS8以后
 */
+(BOOL)iOS8Later;
/**
 *  iOS9校验
 *
 *  @return 是否iOS9以后
 */
+(BOOL)iOS9Later;
/**
 *  iOS10校验
 *
 *  @return 是否iOS10以后
 */
+(BOOL)iOS10Later;
/**
  系统版本比较

 @param version 待比较版本
 @return 是否大于等于比较版本
 */
+(BOOL)iOSVersionLater:(float)version;

@end
