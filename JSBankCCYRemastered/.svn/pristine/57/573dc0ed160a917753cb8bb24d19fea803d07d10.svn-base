#ifndef PCDSizeConfig_h
#define PCDSizeConfig_h

#define SZ_MainScreenWidth  [[UIScreen mainScreen] bounds].size.width
#define SZ_MainScreenHeight [[UIScreen mainScreen] bounds].size.height


#define SZ_Scale        (SZ_MainScreenWidth/SZ_MainScreenHeight)



#define iPhone5 ([UIScreen instancesRespondToSelector:@selector(currentMode)] ? CGSizeEqualToSize(CGSizeMake(640, 1136), [[UIScreen mainScreen] currentMode].size) : NO)

//新设备判断
#define UI_IS_IPAD   (UI_USER_INTERFACE_IDIOM() == UIUserInterfaceIdiomPad)
#define UI_IS_IPHONE (UI_USER_INTERFACE_IDIOM() == UIUserInterfaceIdiomPhone)
#define UI_IS_RETINA ([[UIScreen mainScreen] scale] >= 2.0)
//判断iPHoneXr
#define SCREENSIZE_IS_XR (([UIScreen instancesRespondToSelector:@selector(currentMode)] ? CGSizeEqualToSize(CGSizeMake(828, 1792), [[UIScreen mainScreen] currentMode].size) && !UI_IS_IPAD : NO) || ([UIScreen instancesRespondToSelector:@selector(currentMode)] ? CGSizeEqualToSize(CGSizeMake(750, 1624), [[UIScreen mainScreen] currentMode].size) && !UI_IS_IPAD : NO))
//判断iPHoneX、iPHoneXs
#define SCREENSIZE_IS_X ([UIScreen instancesRespondToSelector:@selector(currentMode)] ? CGSizeEqualToSize(CGSizeMake(1125, 2436), [[UIScreen mainScreen] currentMode].size) && !UI_IS_IPAD : NO)
//判断iPhoneXs Max
#define SCREENSIZE_IS_XS_MAX ([UIScreen instancesRespondToSelector:@selector(currentMode)] ? CGSizeEqualToSize(CGSizeMake(1242, 2688), [[UIScreen mainScreen] currentMode].size) && !UI_IS_IPAD : NO)

#define ScreenResolution [NSString stringWithFormat:@"%.fx%.f",[UIScreen mainScreen].scale * [[UIScreen mainScreen] bounds].size.width,[UIScreen mainScreen].scale * [[UIScreen mainScreen] bounds].size.height]

#define STATUSBAR_HEIGHT (CGFloat)((SCREENSIZE_IS_XR || SCREENSIZE_IS_X || SCREENSIZE_IS_XS_MAX) ? 44 : 20)
//获取设备导航栏高度(含状态栏)
#define NAVI_HEIGHT      (CGFloat)((SCREENSIZE_IS_XR || SCREENSIZE_IS_X || SCREENSIZE_IS_XS_MAX) ? 88 : 64)

//是刘海屏幕(含X、XR、XS、XS Max)
#define BANG_SCREEN (BOOL)((SCREENSIZE_IS_XR || SCREENSIZE_IS_X || SCREENSIZE_IS_XS_MAX) ? YES : NO)

#define  dispatch_async_safe(block)  if ([NSThread isMainThread]) {\
block();}\
else{\
dispatch_async(dispatch_get_main_queue(), block);}

#define SafeString(__POINTER) ([__POINTER isKindOfClass:[NSString class]]?__POINTER:@"")
/**
 *    @brief    RGBA颜色.
 */
#define PNCColorRGBA(r,g,b,a) [UIColor colorWithRed:(r)/255.0f green:(g)/255.0f blue:(b)/255.0f alpha:(a)]

#define UIFont(x)  [UIFont systemFontOfSize:x]

#define RGBA(r,g,b,a) [UIColor colorWithRed:r/255.0f green:g/255.0f blue:b/255.0f alpha:a]


#define JSDelegate  ((AppDelegate*)[UIApplication sharedApplication].delegate)

//DEBUG  模式下打印日志,当前行
#ifdef DEBUG
#define NSLog(fmt,...) NSLog((@"%s [Line %d] " fmt), __PRETTY_FUNCTION__, __LINE__, ##__VA_ARGS__);
#else
#define NSLog(...)
#endif

#endif /* PCDSizeConfig_h */
